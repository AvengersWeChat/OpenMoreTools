<Window
    x:Class="OpenMoreTools.Windows.AboutWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:OpenMoreTools"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="关于"
    Width="400"
    Height="200"
    mc:Ignorable="d">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock
            Grid.Row="0"
            Margin="10"
            TextWrapping="Wrap">
            <Run Text="软件名称：Open More Tools" />
            <LineBreak />
            <Run Text="{Binding Ver, Mode=OneWay}" />
            <LineBreak />
            <Run Text="软件说明：本程序仅供学习交流 严禁商业用途" />
            <LineBreak />
            <Run Text="版权所有：© 2024 Avengers" />
            <LineBreak />
            <Run Text="软件作者：Avengers" />
            <LineBreak />
            <Run Text="Telegrame：@AvengersWeChat" />
        </TextBlock>

        <Button
            x:Name="btnConfirm"
            Grid.Row="1"
            Width="60"
            Margin="15"
            HorizontalAlignment="Right"
            Click="btnConfirm_Click"
            Content="确认" />


    </Grid>

</Window>
